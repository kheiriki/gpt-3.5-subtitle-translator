{
    "name": "Subtitle Translator",
    "version": "1.0",
    "description": "Translate video subtitles.",
    "permissions": ["http://*/*", "https://*/*", "activeTab"],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ],
    "manifest_version": 2
}
